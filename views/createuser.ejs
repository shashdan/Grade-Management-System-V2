<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <link rel="stylesheet" href="./styles/admin.css">
  </head>

  <body>
    <%- include('./includes/navbar') %> 
    <div class="container">
        <div style="text-align:center">
          <h2>Create New User</h2>
        </div>
        <div class="row">
          <div class="column">
            <img src="images/logo.png" >
          </div>
          <div class="column">
            <form action = '/admin/create'  method="POST">
              <label for="admissionnumber">Admission Number (Username)</label>
              <input type="text" id="admissionnumber" name="admissionnumber" placeholder="Enter student admission number">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" placeholder="Enter student password">
              <label for="fname">Full Name</label>
              <input type="text" id="name" name="name" placeholder="Enter student name">
              <label for="branch">Branch</label>
              <input type="text" id="branch" name="branch" placeholder="Enter student branch">
              <label for="fathers-name">Father's Name</label>
              <input type="text" id="fathers-name" name="fathersname" placeholder="Enter father's name">
              <label for="lname">Mobile No.</label>
              <input type="text" id="number" name="number" placeholder="Enter student mobile number">
              <label for="email">Email Id</label>
              <input type="email" id="email" name="emailid" placeholder="Enter student email Id">
              <label for="semester">Semester</label>
              <input type="number" id="semester" name="semester" placeholder="Enter student semester">
              <label for="image">Image</label>
              <input type="file" id="image" name="image" accept="image/*">
              <input type="submit" value="Submit" onclick="one();">
            </form>
            
          </div>
        </div>
      </div>
      <script>
        function one() {
          alert("New student has been saved succesfully.");
        }
      </script>
  </body>
</html>
