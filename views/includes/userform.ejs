<div class="main">
  <form action="/admin/create" method="post">
    <div class="row">
      <div class="form-group col-md-4">
        <label for="admissionnumber">Admission Number (Username)</label>
        <input type="text" class="form-control" id="admissionnumber" name="admissionnumber"
          placeholder="Admission Number">
      </div>
      <div class="col-md-4">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <label for="name">Full Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Full Name">
      </div>
      <div class="col-md-4">
        <label for="fathersname">Father's Name</label>
        <input type="text" class="form-control" id="fathersname" name="fathersname" placeholder="Father's name">
      </div>
      <div class="form-group col-md-2">
        <label for="number">Mobile Number</label>
        <input type="number" class="form-control" id="number" name="number" placeholder="Mobile Number">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4">
        <label for="inputState">Branch</label>
        <select name = "branch" id="inputState" class="form-control">
          <option selected disabled>Select a branch</option>
          <option value="Computer Science">Computer Science</option>
          <option value="Mechanical">Mechanical</option>
          <option value="Chemical">Chemical</option>
          <option value="Civil">Civil</option>
          <option value="Electrical">Electrical</option>
          <option value="Electronics">Electronics</option>
        </select>
      </div>
      <div class="form-group col-md-4">
        <label for="email">Email ID</label>
        <input type="email" class="form-control" id="email" name="emailid" placeholder="Email ID">
      </div>
      <div class="form-group col-md-2">
        <label for="semester">Semester</label>
        <input type="number" class="form-control" id="semester" name="semester" placeholder="Semester">
      </div>
    </div>
    <label for="image">Image</label>
    <input type="file" id="image" name="image" accept="image/*">
    <input type="submit" class="btn btn-primary" value="Create Student">
  </form>
</div>